<section class="content-header">
<h1><%= @stock.company_name %> </h1> <small>Symbol: <%= @stock.symbol %></small>
<ol class="breadcrumb">
  <li><%= link_to '<i class="fa fa-money"></i> Tracked Stocks /'.html_safe, user_stocks_path%></li>

</ol>

</section>
<section class="content">

<div class="row">
  <div class="col-md-6 col-sm-12 col-md-offset-3">
          <!-- Widget: user widget style 1 -->
          <div class="box box-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header">
              <div class="widget-user-username pull-right">
                <%= link_to 'Stop Tracking', '#', class: 'btn btn-default'  %>
              </div>
              <h3 class="widget-user-username"><%= @stock.chief_executive_officer %></h3>
              <h5 class="widget-user-desc">Current CEO</h5>
              <div class="pull-right">
                  <h6><i>Sector: <%= @stock.try(:sector) %></i></h6>
              </div>
            </div>
            <div class="widget-user-image">
              <img class="img-circle" src="<%= @stock.try(:logo) %>" alt="User Avatar">
            </div>
            <div class="box-footer">
              <div class="row">
                <div class="col-sm-4 border-right">
                  <div class="description-block">
                    <h5 class="description-header"><%= @stock.try(:running_low)%> - <%= @stock.try(:running_high) %></h5>
                    <span class="description-text">52 Week Range</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4 border-right">
                  <div class="description-block">
                    <h5 class="description-header"><%= @stock.try(:year_to_date_change)%></h5>
                    <span class="description-text">Year To Date Change</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4">
                  <div class="description-block">
                    <h5 class="description-header"><%= @stock.try(:open) %></h5>
                    <span class="description-text">Last Open</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->
            </div>
          </div>
          <!-- /.widget-user -->
        </div>
        <!-- /.col -->
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="nav-tabs-custom">
    <ul class="nav nav-tabs pull-right">
      <li class="active"><a href="#tab_1-1" data-toggle="tab">General information</a></li>
      <li><a href="#tab_1-2" data-toggle="tab">Financial Overview</a></li>
      <li class="dropdown">
        <a class="dropdown-toggle success" data-toggle="dropdown" href="#">
          Actions <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li role="presentation"><%= link_to 'Stop Tracking', '#'  %></li>
        </ul>
      </li>
      <li class="pull-left header"><i class="fa fa-certificate"> Company Insight</i> </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="tab_1-1">
        <%if @stock %>
        <p>Current Price: <%= @stock.try(:latest_price) %></p>
        <p><strong>Description</strong></p>
        <p><%= @stock.company_description %></p>
        <p>Company Industry: <%= @stock.try(:company_industry)%></p>
        <%= link_to "#{@stock.company_website}", @stock.company_website%>
        <hr>
        <p>Market Cap: <%= @stock.try(:market_cap)%></p>
        <p>Primary Exchange: <%= @stock.try(:primary_exchange)%></p>
        <h5>Current Price Pulled at:<%= @stock.try(:latest_update)%> <%= @stock.try(:latest_time) %></h5>

        <% elsif @nothing %>
        <%= @nothing%>
        <%end %>

        <% if @error %>
          <%= @error %>
        <% end %>

      </div>
      <div class="tab-pane" id="tab_1-2">
        <h1>Financial Overview</h1>
        <p>Latest Close: <%= @stock.try(:close) %></p>
        <p>Close Time: <%= @stock.try(:close_time)%></p>
        <p>Latest Open: <%= @stock.try(:open)%></p>
        <p>Open Time: <%= @stock.try(:open_time)%></p>
        <hr>
        <p>Daily High: <%= @stock.try(:high) %></p>
        <p>Daily Low: <%= @stock.try(:low) %></p>
        <hr>
        <p>Calculation Price: <%= @stock.try(:calculation_price) %></p>
        <p>Latest Volume: <%= @stock.try(:latest_volume) %></p>
        <p>Profit Margin: <%= @stock.try(:company_profit_margin) %>%</p>
        <p>Company Gross profit: <%= @stock.try(:company_gross_profit)%></p>
        <p>Latest Earnings Per Share: <%= @stock.try(:latest_earnings_per_share) %></p>
        <p>Shares Outstanding: <%= @stock.shares_outstanding %></p>
        <p>Revenue Per Share: <%= @stock.revenue_per_share %></p>
        <p>Revenue Per Employee: <%= @stock.revenue_per_employee%></p>
        <p>Company Cash on Hand: <%= @stock.company_cash %></p>
        <p>Total Company Debt: <%= @stock.company_debt %></p>
      </div>



    </div>
  </div>

  </div>
</div>







</section>
