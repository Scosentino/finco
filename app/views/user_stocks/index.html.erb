<section class="content">
    <h2>Stock Index</h2>
  <table class="table table-bordered">
    <thead>
      <th>S No</th>
      <th>Stock Symbol</th>
      <th>Company Name</th>
    </thead>
    <% @stocks.each_with_index do |stock, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= stock.symbol %></td>
        <td><%= stock.company_name %></td>
      </tr>
    <% end  %>
  </table>
    <%= link_to 'Add Stock', new_user_stock_path %>
</section>
