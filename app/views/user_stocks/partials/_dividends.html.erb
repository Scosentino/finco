<div class="tab-pane" id="tab_1-5">
<div class="box-body">
  <div class="row">
    <div class="col-md-2">
      <h2>5yr Average: </h2>
      <h3><%=   @dividends_5yr_avg %></h3>

    </div>
    <div class="col-md-5">
      <p><h3>$<%= @stock.try(:dividend_rate)%></h3><h6><i>Dividend Rate</i></h6></p>
      <p><h3>$<%= @stock.try(:dividend_yield)%></h3><h6><i>Dividend Yield</i></h6></p>
      <p><h3>$<%= @stock.try(:market_cap)%></h3><h6><i>Market Cap</i></h6></p>
      <p><h3>$<%= @stock.try(:latest_eps)%></h3><h6><i>Latest EPS</i></h6></p>
    </div>
    <div class="col-md-5">
      <p><h3><%= @stock.try(:consensus_eps)%></h3><h6><i>Upcoming Estimated EPS</i></h6></p>
      <p><h3><%= @stock.try(:number_of_estimates)%></h3><h6><i>Number of Estimates</i></h6></p>
      <p><h3><%= @stock.try(:eps_surprise_percent)%>%</h3><h6><i>Latest Difference Between Expectation %</i></h6></p>
      <p><h3>$<%= @stock.try(:eps_surprise_dollar)%></h3><h6><i>Latest Difference Between Expectation $</i></h6></p>
    </div>
  </div>
  <div id="dividend_pagination">
    <% @dividends.each do |dividend| %>
    <div class="row dividend-payment-items">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class="color-palette-set">
          <div class="bg-gray disabled color-palette user-stock-title"><span>$<%= dividend.amount%></span></div>
          <div class="bg-gray color-palette text-center"><span><%= dividend.declared_date%></span></div>
          <div class="bg-gray-active color-palette text-center"><span><%= dividend.dividend_type%></span></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>


</div>

</div>


<script type="text/javascript">
$(document).ready(function(){
  $('#dividend_pagination').easyPaginate({
      paginateElement: '.dividend-payment-items',
      elementsPerPage: 1,
      effect: 'slide',
      firstButton: false,
      lastButton: false,
      nextButtonText: '<i class="fa fa-angle-right"></i>',
      prevButtonText: '<i class="fa fa-angle-left"></i>'
  });
});
</script>
